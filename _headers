# Cache Control para Netlify
# Sistema automático de cache-busting - v2.1.1

# HTML - Sem cache (sempre revalidar)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Página inicial
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service Worker - Sempre atualizado
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest - Sempre atualizado
/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JavaScript - Cache de 1 hora com revalidação
/assets/js/*.js
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

# Firebase config - Sem cache
/firebase-config.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# CSS - Cache de 1 hora com revalidação
/assets/css/*.css
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

# Imagens - Cache de 7 dias
/assets/images/*
  Cache-Control: public, max-age=604800, immutable

# Fontes - Cache de 30 dias
/assets/fonts/*
  Cache-Control: public, max-age=2592000, immutable

# Segurança e Performance
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
